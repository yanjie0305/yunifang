<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:padding="30px">
    <CheckBox
        android:focusable="false"
        android:id="@+id/cart_lv_item_cb"
        android:layout_width="60px"
        android:layout_height="60px"
        android:drawableLeft="@drawable/allcheck_selector"
        android:button="@null"
        android:layout_marginTop="80px"
        android:checked="false"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <ImageView
        android:id="@+id/cart_lv_item_img"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginLeft="20px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cart_lv_item_title"
            android:textColor="#000"
            android:text="title"
            android:textSize="30px"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/cart_lv_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"/>
            <TextView
                android:visibility="visible"
                android:id="@+id/cart_lv_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                />
        </LinearLayout>
    </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/lv_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:padding="30px"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买数量"/>
            <ImageView
                android:id="@+id/cart_add"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10px"
                android:src="@mipmap/add_able"/>
            <TextView
                android:id="@+id/cart_count"
                android:layout_width="60px"
                android:layout_height="60px"
                android:text="1"
                android:textSize="50px"
                android:layout_marginLeft="10px"
                android:gravity="center_horizontal"
                android:layout_toLeftOf="@+id/cart_add"/>
            <ImageView
                android:id="@+id/cart_reduce"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_toLeftOf="@+id/cart_count"
                android:layout_marginTop="10px"
                android:src="@mipmap/reduce_unable"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
