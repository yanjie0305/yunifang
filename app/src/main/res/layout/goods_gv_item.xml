<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/goods_item_iv"
        android:layout_width="370px"
        android:layout_height="320px"
       android:layout_centerHorizontal="true" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goods_url"
            android:layout_alignRight="@+id/goods_item_iv"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/goods_gv_item_eff"
        android:layout_width="370px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#000" />

    <TextView
        android:id="@+id/goods_gv_item_name"
        android:layout_width="370px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#66000000" />

    <LinearLayout
        android:layout_width="370px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/goods_shop_price"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#f89" />

        <TextView
            android:id="@+id/goods_market_price"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#66000000" />

    </LinearLayout>

</LinearLayout>
