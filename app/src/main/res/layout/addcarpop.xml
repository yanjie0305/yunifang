<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30px"
        >
        <ImageView
            android:id="@+id/addcar_img"
            android:layout_width="160px"
            android:layout_height="160px" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/addcar_img"
           android:layout_marginTop="30px"
            android:layout_marginLeft="20px"
            android:orientation="vertical">
            <TextView
                android:id="@+id/addcar_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥ 29.90"
                android:textColor="#f89"/>
            <TextView
                android:id="@+id/addcar_kucun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="库存"/>
            <TextView
                android:id="@+id/addcar_xg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="限购"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/addcart_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/dialog_close"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买数量"/>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/reduce"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/reduce_unable"
                android:layout_marginTop="20px"
                android:layout_marginRight="20px"/>
            <TextView
                android:id="@+id/pop_text"
                android:layout_width="0px"
                android:layout_weight="1"
                android:textColor="#000"
                android:layout_marginRight="20px"
                android:layout_height="wrap_content"

                android:text="1"/>
            <ImageView
                android:id="@+id/add"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:src="@mipmap/add_able"/>
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/ok"
        android:layout_width="140px"
        android:layout_height="60px"
        android:text="确定"
        android:background="#f89"
        android:layout_marginTop="30px"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
